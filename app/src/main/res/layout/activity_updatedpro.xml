<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdatedproActivity"
    android:background="@drawable/cut_card_background">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:text="Edit Profile"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold|italic"
        tools:ignore="MissingConstraints">

    </TextView>

    <EditText
        android:id="@+id/pcname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:hint="Policy Name"
        android:padding="20dp"
        tools:ignore="UnknownId"
        android:textColorHint="@color/black"/>

    <EditText
        android:id="@+id/pcemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pcname"
        android:layout_marginTop="16dp"
        android:hint="Policy Email"
        android:padding="20dp"
        android:textColorHint="@color/black"/>

    <EditText
        android:id="@+id/pcnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pcemail"
        android:layout_marginTop="16dp"
        android:inputType="number"
        android:hint="Policy Number"
        android:textColorHint="@color/black"
        android:padding="20dp" />


    <EditText
        android:id="@+id/pcaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pcemail"
        android:layout_marginTop="110dp"
        android:textColorHint="@color/black"
        android:hint="Policy Address"
        android:inputType="textEmailAddress"
        android:padding="20dp" />


    <EditText
        android:id="@+id/pctimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pcemail"
        android:layout_marginTop="198dp"
        android:hint="Policy Time"
        android:textColorHint="@color/black"
        android:inputType="text"
        android:padding="20dp" />




    <Button
        android:id="@+id/proButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pctimer"
        android:layout_marginTop="32dp"
        android:text="Update"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="8dp" />



</RelativeLayout>