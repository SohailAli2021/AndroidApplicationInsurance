<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="50dp"
    android:elevation="5dp"
    app:cardUseCompatPadding="true">






    <TextView
        android:id="@+id/alltextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" User Data "
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        tools:ignore="MissingConstraints">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:orientation="vertical"
        android:padding="15dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fname"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/img1"
                android:text="This is First Name"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="NotSibling">

            </TextView>

            <TextView
                android:id="@+id/lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fname"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/img1"
                android:text="This is Last Name"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="NotSibling">

            </TextView>


            <TextView
                android:id="@+id/agender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lname"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/img1"
                android:text="This is Gender"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="NotSibling">

            </TextView>

            <TextView
                android:id="@+id/aemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/agender"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/img1"
                android:text="This is Email"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="NotSibling">

            </TextView>


            <TextView
                android:id="@+id/acontact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aemail"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/img1"
                android:text="This is contact"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="NotSibling">

            </TextView>


            <TextView
                android:id="@+id/anames"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acontact"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/img1"
                android:text="This is policy name"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="NotSibling">

            </TextView>



            <TextView
                android:id="@+id/acnic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/anames"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/img1"
                android:text="This is CNIC"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="NotSibling">

            </TextView>



            <TextView
                android:id="@+id/apolicynums"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acnic"
                android:layout_marginLeft="10dp"
                android:text="This is policy Number"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="NotSibling">

            </TextView>


            <TextView
                android:id="@+id/aptimes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/apolicynums"
                android:layout_marginLeft="10dp"
                android:text="This is policy Time"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="NotSibling">

            </TextView>


        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>