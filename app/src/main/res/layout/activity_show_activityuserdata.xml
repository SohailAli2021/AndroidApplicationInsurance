<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowActivityuserdata"
    android:padding="16dp"
    android:background="@drawable/cut_card_background">

        <TextView
            android:id="@+id/textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MY Policy"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:layout_marginTop="50dp"
            android:textStyle="bold|italic"
            tools:ignore="MissingConstraints">

        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="450dp"
            app:cardCornerRadius="50dp"
            android:elevation="5dp"
            android:layout_marginTop="150dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/firstNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="First Name: "
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lastNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/firstNameTextView"
                    android:layout_marginBottom="8dp"
                    android:text="Last Name: "
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/emailTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lastNameTextView"
                    android:layout_marginBottom="8dp"
                    android:text="Email: "
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/genderTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/emailTextView"
                    android:layout_marginBottom="8dp"
                    android:text="Gender: "
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/policyNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/genderTextView"
                    android:layout_marginBottom="8dp"
                    android:text="Policy Name: "
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/policyNumberTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/policyNameTextView"
                    android:layout_marginBottom="8dp"
                    android:text="Policy Number: "
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/policyaddressTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/policyNameTextView"
                    android:layout_marginBottom="8dp"
                    android:text="Policy Address: "
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/policyCnicesTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/policyNameTextView"
                    android:layout_marginBottom="8dp"
                    android:text="Policy Cnic Number: "
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/policyTimessTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/policyNameTextView"
                    android:layout_marginBottom="8dp"
                    android:text="Policy Time: "
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="100dp">

                    <ImageView
                        android:id="@+id/editpro"
                        android:onClick="editpro"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="110dp"
                        android:src="@drawable/baseline_mode_edit_outline_24" />


                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


</RelativeLayout>